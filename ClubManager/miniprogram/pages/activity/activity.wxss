/* pages/home/home.wxss */

.homeusermsg {
  display: flex;
  flex-direction: row;
  background-color: #e27d08;
  color: white;
  padding-top: 10px;
  padding-bottom: 10px;
  width: 100%;
}

#userstatus {
  display: block;
  margin-left: 10px;
}

#username {
  display: block;
  position: fixed;
  right: 10px;
}

.row {
  display: flex;
  flex-direction: row;
  flex-flow: row nowrap;
  justify-content: center;
  position: fixed;
  bottom: 0px;
  width: 100%;
  background-color: white;
  /* border-top: 1px solid #ccc; */
}

.column {
  display: flex;
  flex-direction: column;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
  text-align: center;
  padding: 5px;
  width: 100%;
  height: 60px;
}

.img {
  width: 30px;
  height: 30px;
}

.text{
  width: 100%;
}


.title {
  display: block;
  width: 100%;
  margin-top: 40px;
  padding: 5px;
  padding-left: 20px;
  font-weight: bold;
   background-color: #159de3;
   color: white;
}

.tip{
  padding: 10px;
  padding-bottom: 10px;
  width: 100%;
  border-bottom: 1px solid #ccc;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20px 0px;
  box-sizing: content-box;
}

.list-container {
  padding: 0;
  width: 100%;
}

.list-item {
  background-color: #eee;
  border: 1px solid #ccc;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  padding: 20rpx;
}

.left {
  padding-left: 55px;
  width: 100rpx;
  height: 100rpx;
}

.right {
  width: 590rpx;
  height: 100rpx;
  margin-left: 30px;
  display: flex;
  flex-direction: row;
}

.title1 {
  flex: 1;
  display: flex;
  flex-direction: column;
  width: 310rpx;
}

.time {
  font-size: 40rpx;
  color: #000;
}

.date {
  font-size: 35rpx;
  color: #159de3;
}

.status {
  width: 200rpx;
  color: rgb(219, 64, 64);
  font-size: 30rpx;
}

.homeusermsg {
  display: flex;
  flex-direction: left;
  justify-content: flex-start;
}

.search-text {
  width: 100%;
  text-overflow: ellipsis;
  background: #ffebda;
  height: 50px;
}

@keyframes remindMessage {
  0% {
    -webkit-transform: translateX(90%);
  }
  100% {
    -webkit-transform: translateX(-180%);
  }
}

.closeView {
  position: absolute;
  right: 10rpx;
  top: 105rpx;
  font-size: 35rpx;
  color: #d09868;
}